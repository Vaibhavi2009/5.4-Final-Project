<%
// Build ONLY the 5 required columns in the specified order:
// 1) Year  2) Census Taker's Name  3) Number of People in Household
// 4) Household State  5) Household City
%>
<% const _rows = rows || []; %>
<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h3 m-0">Census Records</h1>
  <a class="btn btn-primary" href="/census/new">Add Census</a>
</div>

<p class="text-muted small">Tip: Click any row to edit or delete.</p>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th scope="col">Year</th>
        <th scope="col">Census Taker</th>
        <th scope="col"># People</th>
        <th scope="col">State</th>
        <th scope="col">City</th>
      </tr>
    </thead>
    <tbody>
    <% if (_rows.length === 0) { %>
      <tr><td colspan="5" class="text-muted">No records yet. Click "Add Census" to create one.</td></tr>
    <% } else { %>
      <% _rows.forEach(r => { %>
        <tr role="button" onclick="window.location='/census/<%= r.id %>/edit'">
          <td><%= r.year %></td>
          <td><%= r.taker %></td>
          <td><%= r.num_people %></td>
          <td><%= r.state %></td>
          <td><%= r.city %></td>
        </tr>
      <% }) %>
    <% } %>
    </tbody>
  </table>
</div>